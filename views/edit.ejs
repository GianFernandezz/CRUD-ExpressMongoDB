        <div class="ui container">
            <form id="form" action="/edit/<%- pais._id %>" class="ui form" method="POST">
                <div class="three fields">
                    <div class="field">
                        <label for="label" class="ui header green"><i class="flag icon"></i>INGRESE EL NOMBRE DEL PAIS</label>
                        <input type="text" name="name" placeholder="Nombre del Pais" value="<%- pais.name %>"  id="name">
                    </div>
                    <div class="field">
                        <label for="label" class="ui header green"><i class="users icon"></i>INGRESE EL NOMBRE DE LOS JUGADORES</label>
                        <input type="text" name="players" placeholder="Nombre de los Jugadores" value="<%- pais.players %>" id="players">
                    </div>
                    <div class="field">
                        <label for="label" class="ui header green"><i class="user icon"></i>INGRESE EL NOMBRE DEL ENTRENADOR</label>
                        <input type="text" name="coach" placeholder="Nombre del Entrenador" value="<%- pais.coach %>" id="coach">
                    </div>
                </div>

                <!-- BOTONES PARA ACTUALIZAR Y CANCELAR -->
