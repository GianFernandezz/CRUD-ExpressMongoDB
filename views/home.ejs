                <thead>
                    <th>PAIS</th>
                    <th>JUEGADORES</th>
                    <th>ENTRENADOR</th>
                    <th>Editar</th>
                    <th>Borrar</th>
                </thead>
                <tbody>

                    <% pais.forEach((pais)=>{ %>
                        <tr>
                            <td><%- pais.name %></td>
                            <td><%- pais.players %></td>
                            <td><%- pais.coach %></td>
                            <td><a class="ui blue button" href="/edit/<%= pais._id %>"><i class="edit outline icon"></i></a></td>
                            <td><a class="ui red button" href="/delete/<%= pais._id %>"><i class="trash alternate  icon"></i></a></td>
                        </tr>

                        <% }); %>
                </tbody>
            </table>
