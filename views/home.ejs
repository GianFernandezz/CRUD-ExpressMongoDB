                    </div>
                </div>
                <!-- BOTON PARA AGREGAR DATOS A LA TABLA Y DB"> -->
                    <div class="field fluid">
                        <button type="submit" class="positive ui button"><i class="save icon"></i>Guardar</button>
                    </div>
                <!-- **************************** -->
            </form>
           
            <br>

            <table class="ui inverted selectable aligned table">

                <!-- Barra de Busqueda -->
                
                <!-- <div class="ui input">
